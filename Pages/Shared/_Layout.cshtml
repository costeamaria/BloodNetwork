    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <img src="/imgs/blood.png"  width="60" height="50" alt="BloodNetworkLogo" />
            <div class="container">
                <a class="navbar-brand m-2" asp-area="" asp-page="Clinics/Index">BloodNetwork</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item m-2">
                            <a class="nav-link " style="color:#F72F05" asp-area="" asp-page="/Index"><i class="bi bi-house-heart-fill"></i>Acasă</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link " style="color:#F72F05" asp-area="" asp-page="/Adresses/Index"><i class="bi bi-geo-alt"></i>Locații</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link " style="color:#F72F05" asp-area="" asp-page="/Appointments/Index"><i class="bi bi-heart-pulse-fill"></i>Eu donez</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link " style="color:#F72F05" asp-area="" asp-page="/Categories/Index"><i class="bi bi-layout-text-sidebar-reverse"></i>Donez pentru</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link " style="color:#F72F05" asp-area="" asp-page="Doctors/Index"><i class="bi bi-person-vcard"></i>Doctor</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link" style="color:#F72F05" asp-area="" asp-page="/ContactForm"><i class="bi bi-telegram"></i>Contactează-ne</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

