<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BloodNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BloodNetwork.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <img src="/imgs/blood.png"  width="50" height="50" alt="BloodNetworkLogo" />
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="Clinics/Index">BloodNetwork</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Adresses/Index">Clinic address</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Appointments/Index">Eu donez</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Categories/Index">Donation Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="Doctors/Index">Doctor</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container my-5">
        <footer style="background-color: #F72F05;">
            <div class="container p-4">
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h5 class="mb-3" style="letter-spacing: 2px; color: #F1F1F1;">Administration</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Members/Index">Members</a> </li>
                            <li class="mb-1">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Doctors Administration">Administrator</a>
                            </li>
                            <li>
                               <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4193.06385849328!2d21.94398959663134!3d47.06467285836848!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4746480891d5554b%3A0x7786d0d8bc7cd239!2sBlood%20Transfusion%20Center!5e0!3m2!1sen!2sro!4v1680342408719!5m2!1sen!2sro" width="525" height="150" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h5 class="mb-1" style="letter-spacing: 2px; color: #F1F1F1;">Program</h5>
                        <table class="table" style="color: #F1F1F1; border-color: #F1F1F1;">
                            <tbody>
                                <tr>
                                    <td>L - V:</td>
                                    <td>10am - 5pm</td>
                                </tr>
                                <tr>
                                    <td>S - D:</td>
                                    <td>11am - 14pm</td>
                                </tr>
                            </tbody>
                        </table>
                        
                      </div>

                </div>
            </div>
            <div class="text-center p-3" style="background-color: white;">  
                    &copy; 2023 - BloodNetwork - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @if (IsSectionDefined("AddScript"))
    {
        @RenderSection("AddScript", required: false)
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>