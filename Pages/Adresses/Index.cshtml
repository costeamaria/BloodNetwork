@page "{id:int?}"
@model BloodNetwork.Pages.Adresses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Adresa clinicilor</h1>

<div class="text-black" align="right">
        <a asp-page="Create" class="btn btn-outline-danger">
            <i class="bi bi-house-add">Adaugă o adresă</i>
    </a>
<div class="row">
    <div class="col-md ">

        <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adress[0].AdressName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AdressData.Adresses)
        {
            string selectedRow = "";
            if (item.ID == Model.AdressID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.AdressName)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-secondary" asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a> |
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
@if (Model.AdressData.Adresses != null)
{
        <h3 style="color:#F72F05">Clinica care se află la adresa selectată</h3>
    <table class="table">

        @foreach (var item in Model.AdressData.Adresses)
        {
            string selectedRow = "";
            if (item.ID == Model.AdressID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var c in item.Clinics)
                        {

                            @c.Name 

                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}


