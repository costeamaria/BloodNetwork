@page
@model BloodNetwork.Pages.Adresses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adaugă o nouă adresă</h1>

<h4>Adrese curente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Adress.AdressName" class="control-label"></label>
                <input asp-for="Adress.AdressName" class="form-control" />
                <span asp-validation-for="Adress.AdressName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
