@page
@model BloodNetwork.Pages.Adresses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifică</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Adress.ID" />
            <div class="form-group">
                <label asp-for="Adress.AdressName" class="control-label"></label>
                <input asp-for="Adress.AdressName" class="form-control" />
                <span asp-validation-for="Adress.AdressName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-lg"> <i class="bi fa-kiwi-bird">Înapoi la listă</i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
