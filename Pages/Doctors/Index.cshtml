@page "{id:int?}"
@model BloodNetwork.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Doctori</h1>

<p>
    <a asp-page="Create">Crează un nou doctor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DoctorData.Doctors)
        {
            string selectedRow = "";
            if (item.ID == Model.DoctorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    <img src="~/imgs/user-128.png" width="50" height="50" alt="picture" />
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.DoctorData.Doctors != null)
{
    <h3>Clinii după doctorii selectați</h3>
    <table class="table">

        @foreach (var item in Model.DoctorData.Doctors)
        {
            string selectedRow = "";
            if (item.ID == Model.DoctorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var c in item.Clinics)
                        {

                            @c.Name 

                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}

