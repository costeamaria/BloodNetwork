@page "{id:int?}"
@model BloodNetwork.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Doctori</h1>

<div class="text-black">
    <a asp-page="Create" class="btn btn-outline-danger">
        <i class="bi bi-plus-circle">Crează un nou doctor</i>
    </a>
</div>
<div class="row">
    <div class="col-md ">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Doctor[0].ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Doctor[0].DoctorName)</th>
                    <th>@Html.DisplayNameFor(model => model.Doctor[0].Number)</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.DoctorData.Doctors)
                {
                    <tr>
        
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.DoctorName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DoctorName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-secondary" asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                            <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.ID"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.DoctorData.Doctors != null)
{
    <h3>Clinica în care doctorul selectat activează</h3>
    <table class="table">

        @foreach (var item in Model.DoctorData.Doctors)
        {
            string selectedRow = "";
            if (item.ID == Model.DoctorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var c in item.Clinics)
                        {

                                        @c.Name 

                                        <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}

