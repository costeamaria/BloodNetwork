@page
@model BloodNetwork.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Tipuri de categorii</h1>

<div class="text-black">
    <a asp-page="Create" class="btn btn-outline-danger">
        <i class="bi bi-plus-circle">Crează o categorie nouă</i>
    </a>
</div>
<div class="row">
    <div class="col-md ">

        <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th>Acțiuni</th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model.Category) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
             <td class="align-middle">
                <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.ID"><i class="bi bi-eye"></i>Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Delete</a>
             </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>